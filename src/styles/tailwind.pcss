@tailwind base;
@tailwind components;
@tailwind utilities;

h1 {
    @apply text-2xl;
}
h2 {
    @apply text-xl;
}
h3 {
    @apply text-lg;
}
h4 {
    @apply text-sm;
}
a.link {
    @apply text-blue-600;
    @apply underline;
}

/* section.post p {
    @apply pb-10;
} */

section.post {
    & p {
        @apply pb-10;
    }

    & h3 {
        @apply text-blue-800;
        @apply pb-5;
    }

    & img + em {
        @apply text-gray-500;
    }
}